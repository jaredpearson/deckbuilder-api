<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
	
	<persistence-unit name="deckbuilder.mtg" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>deckbuilder.mtg.entities.User</class>
		<class>deckbuilder.mtg.entities.CardSet</class>
		<class>deckbuilder.mtg.entities.Card</class>
		<class>deckbuilder.mtg.entities.Deck</class>
		<class>deckbuilder.mtg.entities.DeckCard</class>
		
		<properties>
		    <property name="hibernate.show_sql" value="true" />
		</properties>
	</persistence-unit>

</persistence>